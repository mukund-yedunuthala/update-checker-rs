{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "UpdateChecker",
  "version": "0.2.2",
  "identifier": "de.mukund-yedunuthala.update-checker-rs",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "GitHub Release Tracker",
        "width": 1024,
        "height": 768
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "licenseFile": "../LICENSE",
    "license": "AGPL-3.0"
  }
}
